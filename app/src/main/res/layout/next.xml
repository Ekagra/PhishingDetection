<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cybersecurity"
    android:backgroundTintMode="src_over"
    >
    <!--    android:backgroundTint="#e8FFFFFF"
        android:backgroundTintMode="src_over"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textColor="#fafafa"
            android:text="Phishing Detection">

        </TextView>

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Phishing Links"
            android:id="@+id/titleone"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"

            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleone"
            android:textSize="18sp"
            android:textColor="#a8a8a8"
            android:id="@+id/subtextone"
            android:layout_alignStart="@id/titleone"
            android:text="@string/link_des"
            />

    </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:transitionName="image"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/next"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textStyle="bold"
            />



</RelativeLayout>

